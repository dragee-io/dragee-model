{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": false,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Multi-package */
    "paths": {
      "@dragee-io/asserter-type": ["./asserter/*"],
      "@dragee-io/grapher-type": ["./grapher/*"],
      "@dragee-io/type": ["./common/*"]
    }
  }
}
